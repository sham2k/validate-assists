<constraint-mappings>
    <bean class="whereBy" ignore-annotations="false">
        <field name="userCode">
            <constraint annotation="org.hibernate.validator.constraints.Length">
                <element name="min">
                    <value>8</value>
                </element>
                <element name="max">
                    <value>8</value>
                </element>
            </constraint>
        </field>
        <field name="userName">
            <constraint annotation="org.hibernate.validator.constraints.Length">
                <element name="min">
                    <value>8</value>
                </element>
                <element name="max">
                    <value>64</value>
                </element>
            </constraint>
        </field>
    </bean>
</constraint-mappings>
