<constraint-mappings>
    <bean class="pageQry.005" ignore-annotations="false">
        <field name="cmdCode">
            <constraint annotation="org.hibernate.validator.constraints.Length">
                <message>cmdCode长度应是xxx.nnn格式！</message>
                <element name="min">
                    <value>7</value>
                </element>
                <element name="max">
                    <value>7</value>
                </element>
            </constraint>
        </field>
        <field name="qryData">
            <valid name="cmd.001"/>
        </field>
    </bean>
</constraint-mappings>
